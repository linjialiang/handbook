# 子目录列表
$subdirectorys =
"vite-docs-cn",
"vue3-doc",
"vue3-router",
"pinia",
"vue-devtools",
"vitepress",
"axios",
"vxe-table-docs",
"element-plus",
"pure-admin-doc"

# 脚本所在目录
$dirParent = Split-Path -Parent $MyInvocation.MyCommand.Definition

Set-Location $dirParent
for ($i = 0; $i -lt $subdirectorys.Count; $i++) {
  $path = $subdirectorys[$i]
  Write-Output "===== $path ====="
  if ($i -ne 0) {
    Set-Location "../$path"
  }
  else {
    Set-Location $path
  }
  git pull
}
Set-Location ../
